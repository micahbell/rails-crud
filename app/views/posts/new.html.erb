<h1>New Post</h1>

<%= form_for @post do |f| %>
  <%= f.label :author, :class => 'form-label' %>:
  <%= f.text_field :author %><br />
  <br>
  <%= f.label :title, class: 'form-label' %>:
  <%= f.text_field :title %><br />
  <br>
  <%= f.label :body, class: 'form-label' %>
  <%= f.text_area :body %><br />
  <%= f.submit %>
<% end %>
